@model IEnumerable<OfficeProject.Models.Salario_base>

@{
    ViewBag.Title = "ListSalary";
}

<h2>ListSalary</h2>

<p>
    @Html.ActionLink("Ingresar Salario", "AddSalary")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.salario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.salario)
        </td>
        <td>
            @Html.ActionLink("Editar", "UpdateSalary", new { id=item.id }) |
            @Html.ActionLink("Detalle", "SalaryDetails", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "DeleteSalary", new { id=item.id })
        </td>
    </tr>
}

</table>
